        "arkit": "^1.6.4",
        "jest": "29.6.1",
        "jest-ts-auto-mock": "^2.1.0",
        "ts-auto-mock": "^3.7.1",
        "ts-jest": "^29.1.1",
        "tsconfig-paths": "^4.2.0",
        "ttypescript": "^1.5.15",
        "typescript": "^5.1.6"
    },
    "packageManager": "pnpm@8.6.7"
